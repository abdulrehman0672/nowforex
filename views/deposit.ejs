<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deposit Funds - FOURx</title>
    <link href="./deposit.css" rel="stylesheet">
    <style>
        @keyframes marquee {
            0% {
                transform: translateX(100%);
            }

            100% {
                transform: translateX(-100%);
            }
        }

        .marquee {
            animation: marquee 20s linear infinite;
        }

        @media (max-width: 640px) {
            .payment-method-buttons {
                flex-direction: column;
                gap: 0.75rem;
            }

            .payment-method-buttons button {
                width: 100%;
            }

            .qr-code-container {
                padding: 1rem;
            }

            .qr-code-image {
                width: 36vw;
                height: 36vw;
                max-width: 180px;
                max-height: 180px;
            }

            .deposit-form {
                padding: 1.25rem;
            }

            main {
                padding-top: 1.5rem;
                padding-bottom: 5rem;
            }
        }

        @media (max-width: 400px) {
            .footer-nav a {
                padding-left: 0.5rem;
                padding-right: 0.5rem;
            }

            .footer-nav svg {
                width: 1.25rem;
                height: 1.25rem;
            }

            .footer-nav span {
                font-size: 0.65rem;
            }
        }
    </style>
</head>

<body class="pt-16 pb-20">
    <header class="fixed w-full top-0 z-50 bg-white shadow-md">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex-shrink-0">
                    <a href="#" class="flex items-center">
                        <img class="h-16 w-auto" src="logo.svg" alt="Logo" width="64" height="64">
                        <span class="ml-2 text-xl font-bold text-blue-800">FOURx</span>
                    </a>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="#" class="text-gray-600 hover:text-blue-600 transition duration-300">Home</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600 transition duration-300">Asset</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600 transition duration-300">Portfolio</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600 transition duration-300">About</a>
                    <a href="#" class="flex items-center text-gray-600 hover:text-blue-600 transition duration-300">Profile</a>
                </div>
                <div class="md:hidden">
                    <button id="menu-btn" class="text-gray-600 hover:text-blue-600 focus:outline-none" aria-label="Toggle menu">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                        </svg>
                    </button>
                </div>
            </div>
            <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
                <a href="#" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">Home</a>
                <a href="#" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">Invest</a>
                <a href="#" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">Portfolio</a>
                <a href="#" class="block px-4 py-2 text-gray-600 hover:bg-gray-100">About</a>
                <a href="#" class="block px-4 py-2 text-gray-600 hover:bg-gray-100 items-center">Profile</a>
            </div>
        </nav>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-2xl shadow-lg p-6 deposit-form">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Deposit Funds</h2>

                <div class="mb-8 text-center">
                    <div class="bg-gray-100 p-4 rounded-lg qr-code-container">
                        <h3 class="text-lg font-semibold mb-4" id="qr-code-title">Select Payment Method</h3>
                        <img id="easypaisa-qr" src="Salman.png" alt="EasyPaisa QR Code" class="qr-code-image w-48 h-48 mx-auto mb-4 hidden" loading="lazy">
                        <img id="jazzcash-qr" src="Salman.png" alt="JazzCash QR Code" class="qr-code-image w-48 h-48 mx-auto mb-4 hidden" loading="lazy">
                        <div class="bg-gray-200 p-3 rounded-lg">
                            <code id="qr-code-details" class="text-sm font-mono break-words">Select a payment method to view details</code>
                        </div>
                    </div>
                </div>

                <form class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Payment Method <span class="text-red-500">*</span></label>
                        <div class="flex gap-4 payment-method-buttons">
                            <button type="button" id="easypaisa-btn" class="flex-1 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center">
                                <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                EasyPaisa
                            </button>
                            <button type="button" id="jazzcash-btn" class="flex-1 bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors flex items-center justify-center">
                                <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                JazzCash
                            </button>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Transaction ID <span class="text-red-500">*</span></label>
                        <input type="text" class="w-full bg-white rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter transaction ID" required>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Amount (PKR) <span class="text-red-500">*</span></label>
                        <input type="number" class="w-full bg-white rounded-lg border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter deposit amount" step="1" required>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Proof Screenshot <span class="text-red-500">*</span></label>
                        <div class="flex items-center justify-center w-full">
                            <label class="flex flex-col w-full h-32 border-2 border-dashed border-gray-300 hover:border-blue-500 rounded-lg cursor-pointer transition-colors">
                                <div class="flex flex-col items-center justify-center pt-7">
                                    <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                                    </svg>
                                    <p class="text-sm text-gray-500">Click to upload transaction proof</p>
                                </div>
                                <input type="file" class="hidden" accept="image/*" required>
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                        Confirm Deposit
                    </button>
                </form>
            </div>
        </div>
    </main>

    <nav class="fixed bottom-0 w-full bg-white shadow-[0_-2px_10px_rgba(0,0,0,0.1)] flex justify-around py-3 z-50 footer-nav">
        <!-- nav links as before -->
    </nav>

    <script>
        function selectPaymentMethod(method) {
            const easypaisaQR = document.getElementById('easypaisa-qr');
            const jazzcashQR = document.getElementById('jazzcash-qr');
            const qrCodeTitle = document.getElementById('qr-code-title');
            const qrCodeDetails = document.getElementById('qr-code-details');

            if (method === 'easypaisa') {
                easypaisaQR.classList.remove('hidden');
                jazzcashQR.classList.add('hidden');
                qrCodeTitle.textContent = 'EasyPaisa QR Code';
                qrCodeDetails.textContent = 'EasyPaisa Number: 0310-1234567';
            } else if (method === 'jazzcash') {
                jazzcashQR.classList.remove('hidden');
                easypaisaQR.classList.add('hidden');
                qrCodeTitle.textContent = 'JazzCash QR Code';
                qrCodeDetails.textContent = 'JazzCash Number: 0300-1234567';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Add event listeners for buttons
            document.getElementById('easypaisa-btn').addEventListener('click', function () {
                selectPaymentMethod('easypaisa');
            });

            document.getElementById('jazzcash-btn').addEventListener('click', function () {
                selectPaymentMethod('jazzcash');
            });

            const currentPage = window.location.pathname.split('/').pop();
            const navLinks = document.querySelectorAll('nav a');

            navLinks.forEach(link => {
                const linkHref = link.getAttribute('href').split('/').pop();
                if (linkHref === currentPage) {
                    link.classList.remove('text-gray-500', 'hover:text-blue-600');
                    link.classList.add('text-blue-600');
                } else {
                    link.classList.remove('text-blue-600');
                    link.classList.add('text-gray-500', 'hover:text-blue-600');
                }
            });

            // Toggle mobile menu
            const menuBtn = document.getElementById('menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');

            menuBtn.addEventListener('click', function () {
                mobileMenu.classList.toggle('hidden');
                menuBtn.classList.toggle('text-blue-600');
            });

            document.addEventListener('click', function (event) {
                if (!mobileMenu.contains(event.target) && !menuBtn.contains(event.target)) {
                    mobileMenu.classList.add('hidden');
                    menuBtn.classList.remove('text-blue-600');
                }
            });
        });
    </script>
</body>

</html>
