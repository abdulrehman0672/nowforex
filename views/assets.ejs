                <!-- Logo matching home page -->
                <div class="flex-shrink-0">
                    <a href="#" class="flex items-center">
                        <img class="h-16 w-auto" src="logo.svg" alt="Logo" width="64" height="64">
                        <span class="ml-2 text-xl font-bold text-gray-800">FOURx</span>
                    </a>
                </div>

                <!-- Desktop Navigation matching home page -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="#" id="homebtn33"
                        class="text-gray-600 hover:text-blue-600 transition duration-300">Home</a>
                    <a href="#" id="Invest" class="text-gray-600 hover:text-blue-600 transition duration-300">Invest</a>

                    <a href="#" id="aboutbtn33"
                        class="text-gray-600 hover:text-blue-600 transition duration-300">About</a>
                    <a href="/profile.html"
                        class="flex items-center bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
